<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <ImageView
            android:id="@+id/imgCampaign"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_image" />

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black_transparent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="NP040"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_13sp"
            app:layout_constraintBottom_toBottomOf="@id/imgCampaign"
            app:layout_constraintEnd_toEndOf="@id/imgCampaign"
            app:layout_constraintStart_toStartOf="@id/imgCampaign" />

        <TextView
            android:id="@+id/tvCampaignName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text="Cancer"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_14sp"
            app:layout_constraintBottom_toTopOf="@id/tvName"
            app:layout_constraintStart_toEndOf="@id/imgCampaign"
            app:layout_constraintTop_toTopOf="@id/imgCampaign" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:fontFamily="@font/roboto_regular"
            android:includeFontPadding="false"
            android:text="Amrita Kaur"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgCampaign"
            app:layout_constraintTop_toBottomOf="@id/tvCampaignName"
            app:layout_constraintVertical_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>